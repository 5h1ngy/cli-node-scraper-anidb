{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "@client/*": [
        "./bin/client/*"
      ],
      "@handlers/*": [
        "./bin/handlers/*"
      ],
      "@services/*": [
        "./bin/services/*"
      ]
    }
  },
  "include": [
    "bin/**/*.js",
    "bin/utils",
    "bin/database/models/animeReferences.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}